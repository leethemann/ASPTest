@model ASPTest.Models.MTG.MTGCardDetail

@{
    ViewData["Title"] = "Details";
}

<link href="@Url.Content("~/css/details.css")" rel="stylesheet" type="text/css" />

<h2 class="header">Details</h2>

<div>
    <div>
        <img class="mainCardImg" src="@Html.DisplayFor(model => model.ImageURL)" />
    </div>
    <hr />
    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Name)</label>
        <p>@Html.DisplayFor(model => model.Name)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Names)</label>
        <ul>
            @foreach (var name in Model.Names)
            {
                <li>
                    @Html.DisplayFor(model => name)
                </li>
            }
        </ul>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.ManaCost)</label>
        <p>@Html.DisplayFor(model => model.ManaCost)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.CMC)</label>
        <p>@Html.DisplayFor(model => model.CMC)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Colors)</label>
        <ul>
            @foreach (var color in Model.Colors)
            {
                <li>
                    @Html.DisplayFor(model => color)
                </li>
            }
        </ul>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.ColorIdentities)</label>
        <ul>
            @foreach (var colorId in Model.ColorIdentities)
            {

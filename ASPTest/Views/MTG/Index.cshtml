@model ASPTest.Models.MTG.MTGCardSearchViewModel

@{
    ViewData["Title"] = "Index";
}

<link href="@Url.Content("~/css/cardSearch.css")" rel="stylesheet" type="text/css" />

<h2>Card List</h2>

<form asp-controller="MTG" asp-action="CardSearch" method="get">
    <div class="Card">
        <div class="MTG">
            Card Name:
        </div>
        <div>
            <input type="text" name="NameFilter" />
        </div>
        <div>
            Set Name:
        </div>
        <div>
            <select asp-for="SetFilter" asp-items="Model.SetFilterList">
                <option value="">All</option>
            </select>
        </div>
        <div class="spacer"></div>
        <div class="MTGColor">
            <input type="checkbox" asp-for="@Model.ColorFilters[0].Selected" />
            <img src="~/images/Mana_R.png" height="50" width="50" />
            <input type="hidden" asp-for="@Model.ColorFilters[0].Color" />
        </div>
        <div class="MTGColor">
            <input type="checkbox" asp-for="@Model.ColorFilters[1].Selected" />
            <img src="~/images/Mana_W.png" height="50" width="50" />
            <input type="hidden" asp-for="@Model.ColorFilters[1].Color" />
        </div>
        <div class="MTGColor">
            <input type="checkbox" asp-for="@Model.ColorFilters[2].Selected" />
            <img src="~/images/Mana_G.png" height="50" width="50" />
            <input type="hidden" asp-for="@Model.ColorFilters[2].Color" />
        </div>
        <div class="MTGColor">
            <input type="checkbox" asp-for="@Model.ColorFilters[3].Selected" />
            <img src="~/images/Mana_B.png" height="50" width="50" />
            <input type="hidden" asp-for="@Model.ColorFilters[3].Color" />
        </div>
        <div class="MTGColor">
            <input type="checkbox" asp-for="@Model.ColorFilters[4].Selected" />
            <img src="~/images/Mana_U.png" height="50" width="50" />
            <input type="hidden" asp-for="@Model.ColorFilters[4].Color" />
        </div>
        <div class="MTGColor">
            <input type="checkbox" asp-for="@Model.ColorFilters[5].Selected" />
            <img src="~/images/Colorless-symbol.png" height="50" width="50" />
            <input type="hidden" asp-for="@Model.ColorFilters[5].Color" />
        </div>
        <div class="spacer"></div>
        <div>
            Type:
        </div>
        <div>
            <input type="text" name="TypeFilter" />
        </div>
        <div>
            <input type="submit" value="Filter" />
        </div>
    </div>
</form>

<div>
</div>

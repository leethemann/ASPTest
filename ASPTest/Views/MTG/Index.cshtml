@model ASPTest.Models.MTG.MTGCardSearchViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Card List</h2>

<form asp-controller="MTG" asp-action="CardSearch" method="get">
    <div class="MTG">
        Card Name:
    </div>
    <div>
        <input type="text" name="NameFilter" />
    </div>
    <div>
        Set Name:
    </div>
    <div>
        <select asp-for="SetFilter" asp-items="Model.SetFilterList">
            <option value="">All</option>
        </select>
    </div>
    <div style="float:left">
        <input type="checkbox" asp-for="@Model.ColorFilters[0].Selected" />
        <img src="~/images/red.png" />
        <input type="hidden" asp-for="@Model.ColorFilters[0].Color" />
    </div>
    <div style="float:left">
        <input type="checkbox" asp-for="@Model.ColorFilters[1].Selected" />
        <img src="~/images/white.png" />
        <input type="hidden" asp-for="@Model.ColorFilters[1].Color" />
    </div>
    <div style="float:left">
        <input type="checkbox" asp-for="@Model.ColorFilters[1].Selected" />
        <img src="~/images/white.png" />
        <input type="hidden" asp-for="@Model.ColorFilters[1].Color" />
    </div>
    <div>
        <input type="checkbox" asp-for="@Model.ColorFilters[2].Selected" />
        <img src="~/images/green.png" />
        <input type="hidden" asp-for="@Model.ColorFilters[2].Color" />
    </div>
    <div>
        Type:
    </div>
    <div>
        <input type="text" name="TypeFilter" />
    </div>
    <div>
        <input type="submit" value="Filter" />
    </div>
</form>

<table class="table MTG">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Colors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].SetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cards)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

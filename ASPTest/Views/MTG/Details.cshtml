    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Type)</label>
        <p>@Html.DisplayFor(model => model.Type)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.SuperTypes)</label>
        <ul>
            @foreach (var superType in Model.SuperTypes)
            {
                <li>
                    @Html.DisplayFor(model => superType)
                </li>
            }
        </ul>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Types)</label>
        <ul>
            @foreach (var type in Model.Types)
            {
                <li>
                    @Html.DisplayFor(model => type)
                </li>
            }
        </ul>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.SubTypes)</label>
        <ul>
            @foreach (var subType in Model.SubTypes)
            {
                <li>
                    @Html.DisplayFor(model => subType)
                </li>
            }
        </ul>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Rarity)</label>
        <p>@Html.DisplayFor(model => model.Rarity)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Set)</label>
        <p>@Html.DisplayFor(model => model.Set)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.SetName)</label>
        <p>@Html.DisplayFor(model => model.SetName)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Text)</label>
        <p>@Html.DisplayFor(model => model.Text)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Flavor)</label>
        <p>@Html.DisplayFor(model => model.Flavor)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Artist)</label>
        <p>@Html.DisplayFor(model => model.Artist)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Number)</label>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.OriginalText)</label>
        <p>@Html.DisplayFor(model => model.OriginalText)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.OriginalType)</label>
        <p>@Html.DisplayFor(model => model.OriginalType)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Legalities)</label>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Legalities[0].Format)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Legalities[0].LegalStatus)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var legality in Model.Legalities)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => legality.Format)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => legality.LegalStatus)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.ID)</label>
        <p>@Html.DisplayFor(model => model.ID)</p>
    </div>
</div>

<div>
    <a asp-action="CardSearch">Back to List</a>
</div>

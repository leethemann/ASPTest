    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Layout)</label>
        <p>@Html.DisplayFor(model => model.Layout)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.MultiverseID)</label>
        <p>@Html.DisplayFor(model => model.MultiverseID)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Watermark)</label>
        <p>@Html.DisplayFor(model => model.Watermark)</p>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Rulings)</label>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Rulings[0].Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rulings[0].Text)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ruling in Model.Rulings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => ruling.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ruling.Text)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.ForeignNames)</label>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ForeignNames[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ForeignNames[0].Text)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ForeignNames[0].Flavor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ForeignNames[0].ImageURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ForeignNames[0].Language)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ForeignNames[0].MultiverseID)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var name in Model.ForeignNames)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => name.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => name.Text)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => name.Flavor)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(model => name.ImageURL)" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => name.Language)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => name.MultiverseID)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="Card">
        <label>@Html.DisplayNameFor(model => model.Variations)</label>
